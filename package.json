{
  "name": "todometer",
  "description": "A meter-based to-do list",
  "version": "2.0.1",
  "main": "src/main/dist/index.cjs",
  "type": "module",
  "author": {
    "name": "Cassidy Williams",
    "email": "hi@cassidoo.co",
    "url": "https://cassidoo.co"
  },
  "homepage": ".",
  "build": {
    "appId": "com.electron.todometer",
    "productName": "todometer",
    "copyright": "Copyright Â© 2020 @cassidoo",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/mac/icon.png.icns"
    },
    "win": {
      "icon": "assets/win/icon.png.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/png/256x256.png"
    },
    "files": [
      "node_modules/**/*",
      "src/main/dist/**",
      "src/preload/dist/**",
      "src/renderer/dist/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "dev": "node src/scripts/watch.mjs",
    "build": "npm run build:main & npm run build:preload & npm run build:renderer",
    "update-vendors": "node src/scripts/update-electron-vendors.mjs",
    "build:main": "cd ./src/main && vite build",
    "build:preload": "cd ./src/preload && vite build",
    "build:renderer": "cd ./src/renderer && vite build",
    "test": "cd ./src/renderer && vitest src",
    "postinstall": "electron-builder install-app-deps && npm run update-vendors",
    "pre-electron-pack": "npm run build",
    "electron-pack": "electron-builder build --dir --windows --mac --linux"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@reach/accordion": "^0.8.0",
    "date-fns": "^2.9.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "eslint": "^8.26.0",
    "eslint-plugin-react": "^7.31.10",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0",
    "jsdom": "^20.0.1",
    "sass": "^1.55.0",
    "vite": "^3.1.8",
    "vitest": "^0.24.3"
  }
}
